/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": [],
    "baseUrl": "../../",
    "paths": {
      "@common/*": ["./projects/nirengi-ui-kit/src/lib/common/*"],
      "@design-tokens/*": ["./projects/nirengi-ui-kit/src/lib/design-tokens/*"],
      "@components/*": ["./projects/nirengi-ui-kit/src/lib/components/*"],
      "@directives/*": ["./projects/nirengi-ui-kit/src/lib/directives/*"],
      "@pipes/*": ["./projects/nirengi-ui-kit/src/lib/pipes/*"],
      "@styles/*": ["./projects/nirengi-ui-kit/src/lib/styles/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
