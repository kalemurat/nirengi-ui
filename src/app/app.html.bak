<div class="app-container">
  <!-- Sidebar -->
  <aside [class]="'app-sidebar ' + (isSidebarOpen() ? 'app-sidebar--open' : 'app-sidebar--closed')">
    <div class="app-sidebar__header">
      <h1 class="app-sidebar__title">{{ title() }}</h1>
      <button 
        class="app-sidebar__toggle"
        (click)="toggleSidebar()"
        aria-label="Toggle sidebar">
        {{ isSidebarOpen() ? '←' : '→' }}
      </button>
    </div>

    @if (isSidebarOpen()) {
      <nav class="app-sidebar__nav">
        <!-- Kategorize edilmiş menü -->
        @for (category of menuItemsByCategory(); track category[0]) {
          <div class="app-sidebar__category">
            <h2 class="app-sidebar__category-title">{{ category[0] }}</h2>
            <ul class="app-sidebar__menu">
              @for (item of category[1]; track item.id) {
                <li class="app-sidebar__menu-item">
                  <button
                    [class]="'app-sidebar__menu-button ' + 
                      (selectedComponentId() === item.id ? 'app-sidebar__menu-button--active' : '')"
                    (click)="selectComponent(item.id)">
                    <span class="app-sidebar__menu-label">{{ item.label }}</span>
                    <span class="app-sidebar__menu-description">{{ item.description }}</span>
                  </button>
                </li>
              }
            </ul>
          </div>
        }
      </nav>
    }
  </aside>

  <!-- Main Content -->
  <main class="app-main">
    <div class="app-content">
      
      <!-- ====================================================================== -->
      <!-- HEADING SHOWCASE -->
      <!-- ====================================================================== -->
      @if (selectedComponentId() === 'heading') {
        <div class="showcase">
          <header class="showcase__header">
            <h2 class="showcase__title">Heading Component</h2>
            <p class="showcase__description">
              Semantic HTML heading component (h1-h6) with multiple sizes, colors, alignments, and weights.
            </p>
          </header>

          <!-- HEADING LEVELS -->
          <section class="showcase__section">
            <h3 class="showcase__section-title">Semantic Levels (h1-h6)</h3>
            <div class="showcase__column">
              @for (level of headingLevels(); track level) {
                <nui-heading 
                  [level]="level" 
                  [size]="Size.Large">
                  {{ level.toUpperCase() }} - This is a {{ level }} heading
                </nui-heading>
              }
            </div>
          </section>

          <!-- SIZE VARIANTS -->
          <section class="showcase__section">
            <h3 class="showcase__section-title">Size Variants</h3>
            <div class="showcase__column">
              @for (size of headingSizes(); track size) {
                <nui-heading [size]="size">
                  {{ size.toUpperCase() }} - Size variant heading
                </nui-heading>
              }
            </div>
          </section>

          <!-- COLOR VARIANTS -->
          <section class="showcase__section">
            <h3 class="showcase__section-title">Color Variants</h3>
            <div class="showcase__grid">
              @for (variant of headingVariants(); track variant) {
                <div class="showcase__item">
                  <nui-heading 
                    [variant]="variant"
                    [size]="Size.Medium">
                    {{ variant | titlecase }}
                  </nui-heading>
                </div>
              }
            </div>
          </section>

          <!-- ALIGNMENT VARIANTS -->
          <section class="showcase__section">
            <h3 class="showcase__section-title">Alignment Variants</h3>
            <div class="showcase__column">
              @for (align of headingAligns(); track align) {
                <div class="showcase__alignment">
                  <nui-heading 
                    [align]="align"
                    [size]="Size.Medium"
                    [variant]="ColorVariant.Primary">
                    {{ align | titlecase }} Aligned Heading
                  </nui-heading>
                </div>
              }
            </div>
          </section>

          <!-- WEIGHT VARIANTS -->
          <section class="showcase__section">
            <h3 class="showcase__section-title">Weight Variants</h3>
            <div class="showcase__column">
              @for (weight of headingWeights(); track weight) {
                <nui-heading 
                  [weight]="weight"
                  [size]="Size.Large">
                  {{ weight | titlecase }} - Font Weight Heading
                </nui-heading>
              }
            </div>
          </section>

          <!-- SPECIAL FEATURES -->
          <section class="showcase__section">
            <h3 class="showcase__section-title">Special Features</h3>
            
            <div class="showcase__grid">
              <div class="showcase__item">
                <h4 class="showcase__item-title">Truncate</h4>
                <div class="showcase__feature-demo">
                  <nui-heading 
                    [truncate]="true"
                    [size]="Size.Medium">
                    This is a very long heading text that will be truncated with ellipsis when it overflows
                  </nui-heading>
                </div>
              </div>

              <div class="showcase__item">
                <h4 class="showcase__item-title">Line Clamp (2 lines)</h4>
                <div class="showcase__feature-demo">
                  <nui-heading 
                    [lineClamp]="2"
                    [size]="Size.Medium">
                    This is a multi-line heading that will be clamped to exactly 2 lines and then show ellipsis for any overflow content
                  </nui-heading>
                </div>
              </div>

              <div class="showcase__item">
                <h4 class="showcase__item-title">Uppercase</h4>
                <nui-heading 
                  [uppercase]="true"
                  [size]="Size.Medium"
                  [variant]="ColorVariant.Primary">
                  Uppercase heading
                </nui-heading>
              </div>

              <div class="showcase__item">
                <h4 class="showcase__item-title">With Margin Bottom</h4>
                <nui-heading 
                  [marginBottom]="true"
                  [size]="Size.Medium"
                  [variant]="ColorVariant.Success">
                  Heading with spacing
                </nui-heading>
                <p class="showcase__demo-text">Following paragraph text</p>
              </div>
            </div>
          </section>

          <!-- COMBINATIONS -->
          <section class="showcase__section">
            <h3 class="showcase__section-title">Combination Examples</h3>
            
            <div class="showcase__grid">
              <div class="showcase__item">
                <h4 class="showcase__item-title">Hero Heading</h4>
                <nui-heading 
                  [level]="HeadingLevel.H1"
                  [size]="Size.XLarge"
                  [align]="HeadingAlign.Center"
                  [weight]="HeadingWeight.Extrabold"
                  [variant]="ColorVariant.Primary">
                  Welcome
                </nui-heading>
              </div>

              <div class="showcase__item">
                <h4 class="showcase__item-title">Section Title</h4>
                <nui-heading 
                  [level]="HeadingLevel.H2"
                  [size]="Size.Large"
                  [weight]="HeadingWeight.Bold"
                  [variant]="ColorVariant.Neutral"
                  [marginBottom]="true">
                  Features
                </nui-heading>
              </div>

              <div class="showcase__item">
                <h4 class="showcase__item-title">Card Header</h4>
                <nui-heading 
                  [level]="HeadingLevel.H3"
                  [size]="Size.Medium"
                  [weight]="HeadingWeight.Semibold"
                  [variant]="ColorVariant.Info">
                  Card Title
                </nui-heading>
              </div>

              <div class="showcase__item">
                <h4 class="showcase__item-title">Label Style</h4>
                <nui-heading 
                  [level]="HeadingLevel.H4"
                  [size]="Size.Small"
                  [uppercase]="true"
                  [weight]="HeadingWeight.Bold"
                  [variant]="ColorVariant.Secondary">
                  Label Text
                </nui-heading>
              </div>
            </div>
          </section>
        </div>
      }

      <!-- ====================================================================== -->
      <!-- BUTTON SHOWCASE -->
      <!-- ====================================================================== -->
      @if (selectedComponentId() === 'button') {
        <div class="showcase">
          <header class="showcase__header">
            <h2 class="showcase__title">Button Component</h2>
            <p class="showcase__description">
              Modern button component with 4 types, 7 color variants, and 5 sizes.
            </p>
          </header>

          <!-- BUTTON TYPES SHOWCASE -->
          @for (type of buttonTypes(); track type) {
            <section class="showcase__section">
              <h3 class="showcase__section-title">{{ type | titlecase }} Type</h3>
              
              <!-- All Variants for this Type -->
              <div class="showcase__grid">
                @for (variant of buttonVariants(); track variant) {
                  <div class="showcase__item">
                    <h4 class="showcase__item-title">{{ variant | titlecase }}</h4>
                    
                    <!-- All Sizes for this Variant -->
                    <div class="showcase__size-group">
                      @for (size of buttonSizes(); track size) {
                        <nui-button
                          [type]="type"
                          [variant]="variant"
                          [size]="size"
                          (clicked)="handleButtonClick()">
                          {{ size | uppercase }}
                        </nui-button>
                      }
                    </div>
                  </div>
                }
              </div>
            </section>
          }

          <!-- SPECIAL STATES -->
          <section class="showcase__section">
            <h3 class="showcase__section-title">Special States</h3>
            
            <div class="showcase__grid">
              <div class="showcase__item">
                <h4 class="showcase__item-title">Disabled State</h4>
                <div class="showcase__size-group">
                  <nui-button [disabled]="true">Disabled</nui-button>
                  <nui-button [variant]="ColorVariant.Success" [disabled]="true">Disabled</nui-button>
                  <nui-button [variant]="ColorVariant.Danger" [disabled]="true">Disabled</nui-button>
                </div>
              </div>

              <div class="showcase__item">
                <h4 class="showcase__item-title">Loading State</h4>
                <div class="showcase__size-group">
                  <nui-button [loading]="true">Loading...</nui-button>
                  <nui-button [variant]="ColorVariant.Success" [loading]="true">Processing...</nui-button>
                  <nui-button [variant]="ColorVariant.Danger" [loading]="true">Deleting...</nui-button>
                </div>
              </div>

              <div class="showcase__item">
                <h4 class="showcase__item-title">Full Width</h4>
                <div class="showcase__column">
                  <nui-button [fullWidth]="true">Full Width Button</nui-button>
                  <nui-button [variant]="ColorVariant.Success" [fullWidth]="true">Full Width Success</nui-button>
                </div>
              </div>
            </div>
          </section>
        </div>
      }

    </div>
  </main>
</div>

<router-outlet />
