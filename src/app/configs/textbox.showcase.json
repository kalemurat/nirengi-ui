{
  "id": "textbox",
  "name": "Textbox",
  "description": "Input fields for user text with support for labels, hints, and error states",
  "category": "Forms",
  "selector": "nui-textbox",
  "properties": [
    {
      "name": "label",
      "type": "string",
      "label": "Label",
      "defaultValue": "Username",
      "description": "Label text displayed above the input"
    },
    {
      "name": "placeholder",
      "type": "string",
      "label": "Placeholder",
      "defaultValue": "Enter your username",
      "description": "Placeholder text"
    },
    {
      "name": "value",
      "type": "string",
      "label": "Value",
      "defaultValue": "",
      "description": "Input value"
    },
    {
      "name": "size",
      "type": "enum",
      "label": "Size",
      "defaultValue": "md",
      "description": "Size of the input",
      "options": [
        { "label": "Extra Small", "value": "xs" },
        { "label": "Small", "value": "sm" },
        { "label": "Medium", "value": "md" },
        { "label": "Large", "value": "lg" },
        { "label": "Extra Large", "value": "xl" }
      ]
    },
    {
      "name": "type",
      "type": "enum",
      "label": "Type",
      "defaultValue": "text",
      "description": "HTML input type",
      "options": [
        { "label": "Text", "value": "text" },
        { "label": "Password", "value": "password" },
        { "label": "Email", "value": "email" },
        { "label": "Number", "value": "number" },
        { "label": "Search", "value": "search" },
        { "label": "Tel", "value": "tel" },
        { "label": "Url", "value": "url" }
      ]
    },
    {
      "name": "hint",
      "type": "string",
      "label": "Hint",
      "defaultValue": "",
      "description": "Helper text displayed below the input"
    },
    {
      "name": "variant",
      "type": "enum",
      "label": "Variant",
      "defaultValue": "primary",
      "description": "Color variant of the input",
      "options": [
        { "label": "Primary", "value": "primary" },
        { "label": "Secondary", "value": "secondary" },
        { "label": "Success", "value": "success" },
        { "label": "Danger", "value": "danger" },
        { "label": "Warning", "value": "warning" },
        { "label": "Info", "value": "info" },
        { "label": "Neutral", "value": "neutral" }
      ]
    },
    {
      "name": "icon",
      "type": "string",
      "label": "Icon",
      "defaultValue": "",
      "description": "Icon to display inside the input",
      "options": [
        { "label": "None", "value": "" },
        { "label": "User", "value": "User" },
        { "label": "Lock", "value": "Lock" },
        { "label": "Mail", "value": "Mail" },
        { "label": "Search", "value": "Search" }
      ]
    },
    {
      "name": "disabled",
      "type": "boolean",
      "label": "Disabled",
      "defaultValue": false,
      "description": "Disable the input"
    },
    {
      "name": "readonly",
      "type": "boolean",
      "label": "Readonly",
      "defaultValue": false,
      "description": "Make the input readonly"
    }
  ],
  "examples": [
    {
      "title": "Default Textbox",
      "description": "Standard input with label and placeholder",
      "propertyValues": {
        "label": "Username",
        "placeholder": "Enter username"
      }
    },
    {
      "title": "Password Input",
      "description": "Password field with icon",
      "propertyValues": {
        "label": "Password",
        "type": "password",
        "icon": "Lock",
        "placeholder": "Enter password"
      }
    },
    {
      "title": "Danger (Error) State",
      "description": "Input with danger variant and hint",
      "propertyValues": {
        "label": "Email",
        "value": "invalid-email",
        "variant": "danger",
        "hint": "Please enter a valid email address",
        "icon": "Mail"
      }
    }
  ],
  "events": [
    {
      "name": "ngModelChange",
      "label": "Value Change",
      "payloadDescription": "Updated text value"
    }
  ]
}
